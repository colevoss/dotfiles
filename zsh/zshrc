export DOTFILES="$HOME/dotfiles"
export ZSH_CONFIG="$DOTFILES/zsh"
export ZSH_PLUGIN_DIR="$HOME/.zsh"


HISTFILE=~/.zsh_history
setopt appendhistory

# some useful options (man zshoptions)
setopt autocd extendedglob nomatch menucomplete
setopt interactive_comments
stty stop undef		# Disable ctrl-s to freeze terminal.
zle_highlight=('paste:none')

# beeping is annoying
unsetopt BEEP

autoload -Uz edit-command-line
zle -N edit-command-line
bindkey '^v' edit-command-line


autoload -U up-line-or-beginning-search
autoload -U down-line-or-beginning-search
zle -N up-line-or-beginning-search
zle -N down-line-or-beginning-search

autoload -U add-zsh-hook

# Source environemtn variables from each file
# in $DOTFILES/vars that has a .vars.sh file name
for file in $ZSH_CONFIG/vars/**/*.vars.zsh; do
  source ${file}
done

# Source aliases from each file
# in $DOTFILES/aliases that has a .alias.sh file name
for file in $ZSH_CONFIG/aliases/**/*.alias.zsh; do
  source ${file}
done

for file in $ZSH_CONFIG/plugins/**/*.plugin.zsh; do
  source ${file}
done

for file in $ZSH_CONFIG/bindings/**/*.bindings.zsh; do
  source ${file}
done

# Keep this at the bottom
source $ZSH_PLUGIN_DIR/dracula/zsh-syntax-highlighting/zsh-syntax-highlighting.sh
source $ZSH_PLUGIN_DIR/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh

[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh
